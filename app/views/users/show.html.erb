<div class="title">Your Product Reviews</div>

<% @reviews.each do |review| %>

<div class="review-header">
  <%= review.created_at %></h3><%= @product.name %> by <%= @product.brand.name %><br>

<h3>
  <%= review.title %>
</h3>
</div>

<div class="review-content">
  <%= review.body %>

<%= link_to "Edit Review", edit_review_path(review.id) %>
  <% end %>
</div>
