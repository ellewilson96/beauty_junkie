<div class="title">Your Product Reviews</div>


<div class="review-header">
  <%= @review.created_at.strftime("%A, %d %b %Y at %l:%M %p") %><br>
  <%= @product.name %> by <%= @product.brand.name %><br></div>
<div class="review-title"><%= @review.title %>
</div>

<div class="review-content">
  <%= @review.body %>
</div>

<div class="review-links">
<%= link_to "Edit Review", edit_review_path(@review.id) %>


<% if @review.comments.present? %>
<br><a href="/reviews/<%=@review.id%>" class="load-comments" id="show">Show all comments</a>
<br>

<div class="review-comments-<%=@review.id%>">
</div>

<% else %>
  <a href="/reviews/<%=@review.id%>">Add a New Comment</a>
<% end %>


  <div id="new-comment">
      <%= form_for(@comment, :url => review_comments_path(@review)) do |f|  %>
      <%= f.text_area :content %>
       <p><%= f.submit %></h3></p><br>
      <% end %>
    </div>
  </div>
