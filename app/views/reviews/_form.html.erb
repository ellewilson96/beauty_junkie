
<h2>Write a Review for <%= @product.brand.name %>'s <i><%= @product.name %></i></h2>
<br>
<%= form_for @review do |f| %>
<div class="review_form">
  <h4>

  <%= f.label :title %>:
  <%= f.text_field :title %><br>

  <%= f.label :body %>:
  <%= f.text_area :body %><br>

  <%= f.submit %>
  <% end %>
</h4>
</div>
