<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>


<div class="comments">
  <%= render 'comments/comments' %>
</div>

<%= form_for(@comment, :url => post_comments_path(@post)) do |f|  %>
  <%= f.text_area :content %>

  <p><%= f.submit %></p>
<% end %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
